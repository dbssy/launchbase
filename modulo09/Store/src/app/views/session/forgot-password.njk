{% extends "layout.njk" %}
{% import "parts/card.njk"  as card %}

{% block content %}

    {% call card.render("Recupere sua senha", "password container") %}
        <form action="/users/forgot-password" method="POST">
            <div class="fields">
                <div class="item">
                    <div>Email</div>
                    <div>
                        <input 
                            type="email" 
                            name="email" 
                            class="form-control" 
                            placeholder="Digite o email cadastrado"
                            onblur="Validate.apply(this, 'isEmail')"
                        >
                    </div>
                </div>
            </div>

            <button type="submit" class="button">Recuperar</button>
        </form>
    {% endcall %}

{% endblock %}