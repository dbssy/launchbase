{% extends "layout.njk" %}

{% block content %}

    <section class="password container form">
        <form action="/users/forgot-password" method="POST">
            <div class="header">
                <h3>Recupere sua senha</h3>
            </div>

            <div class="fields">
                <div class="item">
                    <div>Email</div>
                    <div>
                        <input 
                            type="email" 
                            name="email" 
                            class="form-control" 
                            placeholder="Digite o email cadastrado"
                            onblur="Validate.apply(this, 'isEmail')"
                        >
                    </div>
                </div>
            </div>

            <button type="submit" class="button">Recuperar</button>
        </form>
    </section>

{% endblock %}