{% extends "layout.njk" %}

{% block content %}

  <div class="card">
    <section style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">
      <h3>Edit {{ teacher.name }}</h3>

      <form method="POST" action="/teachers?_method=PUT">
      {% include "teachers/fields.njk" %}
        <input type="hidden" name="id" value="{{ teacher.id }}">
      </form>

      <form id="delete" method="POST" action="/teachers?_method=DELETE">
        <input type="hidden" name="id" value="{{ teacher.id }}">
        <button type="submit">Delete</button>
      </form>
    </section>
  </div>

  {% include "confirm.njk" %}

{% endblock %}