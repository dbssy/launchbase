{% extends "layout.njk" %}

{% block content %}

  <div class="card table-container">
    <a href="/teachers/create" class="btn">Create teacher</a>
    <table width="100%">
      <thead>
        <tr>
          <th>Full Name</th>
          <th>Subjects</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
      {% for teacher in teachers %}
        <tr>
          <td>
            <span style="background-image: url({{ teacher.avatar_url }})"></span>
            {{ teacher.name }}
          </td>
          <td>
            {% for subject in teacher.subjects.split(",") %}
            <span>{{ subject }}</span>
            {% endfor %}
          </td>
          <td><a href="/teachers/{{ teacher.id }}">View</a></td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock %}