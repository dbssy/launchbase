{% extends "layout.njk" %}

{% block content %}

  <div class="card">
    <section style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">
      <h3>Details {{ student.name }}</h3>

      <div class="item">
        <div>Student</div>
        <div>{{ student.name }}</div>
      </div>

      <div class="item">
        <div>Email</div>
        <div>{{ student.email }}</div>
      </div>

      <div class="item">
        <div>Age</div>
        <div>{{ student.birth }}</div>
      </div>

      <div class="item">
        <div>School Year</div>
        <div>{{ student.year }}</div>
      </div>

      <div class="item">
        <div>School Hours</div>
        <div>{{ student.hours }} hour(s)</div>
      </div>

      <a href="/students/{{ student.id }}/edit" class="button">Edit</a>
    </section>
  </div>

{% endblock %}