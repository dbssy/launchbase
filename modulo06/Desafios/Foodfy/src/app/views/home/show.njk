{% extends "home/layout.njk" %}

{% block head %}<title>{{ recipe.title }} | Foodfy</title>{% endblock %}

{% block content %}

  <section class="header-recipe">
    <div class="card">
      <div class="img">
        <img src="{{ files[0].src }}" alt="{{ files[0].name }}">
      </div>

      <div class="highlights">
        {% for file in files %}
        <img 
          src="{{ file.src }}" 
          {% if files.indexOf(file) == 0 %} class="selected" {% endif %} 
          onclick="PhotoSelected.highlightPhoto(event)"
        >
        {% endfor %}
      </div>

      <div class="title">
        <p>{{ recipe.title }}</p>
      </div>

      <div class="author">
        <p>{{ recipe.chef_name }}</p>
      </div>
    </div>
  </section>

  <section class="body-recipe">
    <div class="topic">
      <div class="button">
        <h2>Ingredientes</h2>
        <span>ESCONDER</span>
      </div>
      <div class="topic-content">
        <ul>
          {% for ingredient in recipe.ingredients %}
          <li>{{ ingredient }}</li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div class="topic">
      <div class="button">
        <h2>Modo de Preparo</h2>
        <span>MOSTRAR</span>
      </div>
      
      <div class="topic-content hidden">
        <ul>
          {% for preparation in recipe.preparation %}
          <li>{{ preparation }}</li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div class="topic">
      <div class="button">
        <h2>Informações adicionais</h2>
        <span>ESCONDER</span>
      </div>
      
      <div class="topic-content">
        <p>{{ recipe.information }}</p>
      </div>
    </div>
  </section>

{% endblock %}