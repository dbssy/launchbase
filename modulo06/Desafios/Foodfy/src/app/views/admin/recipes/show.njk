{% extends "admin/layout.njk" %}

{% block content %}

  <section id="show">
    <div class="header">
      <h2>Receita: {{ recipe.title }}</h2>
      <span>
        <a href="{{ recipe.id}}/edit" class="button">Editar receita</a>
      </span>
    </div>
  </section>

  <section class="header-recipe">
    <div class="card">
      <div class="img">
        <img src="{{ files[0].src }}" alt="{{ files[0].name }}">
      </div>

      <div class="highlights">
        {% for file in files %}
        <img 
          src="{{ file.src }}" 
          {% if files.indexOf(file) == 0 %} class="selected" {% endif %} 
          onclick="PhotoSelected.highlightPhoto(event)"
        >
        {% endfor %}
      </div>

      <div class="title">
        <p>{{ recipe.title }}</p>
      </div>

      <div class="author">
        <p>por {{ recipe.chef_name }}</p>
      </div>
    </div>
  </section>

  <section class="body-recipe">
    <div>
      <h2>Ingredientes</h2>
    </div>

    <div>
      <ul>
        {% for ingredient in recipe.ingredients %}
        <li>{{ ingredient }}</li>
        {% endfor %}
      </ul>
    </div>

    <div>
      <h2>Modo de Preparo</h2>
    </div>
      
    <div>
      <ul>
        {% for preparation in recipe.preparation %}
        <li>{{ preparation }}</li>
        {% endfor %}
      </ul>
    </div>

    <div>
      <h2>Informações adicionais</h2>
    </div>
      
    <div>
      <p>{{ recipe.information }}</p>
    </div>
  </section>
  

{% endblock %}