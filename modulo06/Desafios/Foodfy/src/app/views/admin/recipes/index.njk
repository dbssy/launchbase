{% extends "admin/layout.njk" %}

{% block content %}

  <section class="index">
    <div class="header">
      <h2>Gerenciar receitas</h2>
      <span>
        <a href="recipes/create" class="button">Adicionar receita</a>
      </span>
    </div>

    <div class="cards">
    {% for recipe in recipes %}
      <div class="recipe">
        <div class="img">
          <img src="{{ recipe.file.src }}">
        </div>

        <div>
          <div class="title">
            <p>{{ recipe.title }}</p>
          </div>

          <div class="author">
            <p>por {{ recipe.chef_name }}</p>
          </div>

          <a href="recipes/{{ recipe.id }}" class="link">Visualizar</a>
        </div>
      </div>
    {% endfor %}
    </div>
  </section>

{% endblock %}