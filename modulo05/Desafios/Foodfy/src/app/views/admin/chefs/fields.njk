<div class="details">
  <div class="item">
    <div>Nome</div>
    <div>
      <input 
        type="text" 
        name="name" 
        class="form-control"
        value="{{ chef.name }}"
        placeholder="Nome do chef"
      >
    </div>
  </div>
</div>

<div class="details">
  <div class="item">
    <div>Avatar</div>
    <div>
      <input 
        type="url" 
        name="avatar_url" 
        class="form-control"
        value="{{ chef.avatar_url }}"
        placeholder="http://"
      >
    </div>
  </div>
</div>